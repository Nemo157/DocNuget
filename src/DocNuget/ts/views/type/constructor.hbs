{{# ifAccessible Constructor }}
  <div>
    <h5>
      {{ accessibilityDebug Constructor }}
      {{ Accessibility }}
      {{ replace Type.Name '`\d+$' '' ~}}
      (
        {{~# join Constructor.Parameters ', ' ~}}
          {{~> link Package=../Package Assembly=../Assembly Type=Type }}
          {{ this.Name ~}}
        {{~/ join ~}}
      )
    </h5>
    <p>{{ Constructor.Summary }}</p>
  </div>
{{/ ifAccessible }}
